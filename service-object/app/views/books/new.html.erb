<h1>New book</h1>

<%= form_for :book, url: books_path do |f| %>
  <p>Title: <%= f.text_field :title %></p>
  <p>Price: <%= f.text_field :price, placeholder: '1.50' %></p>
    Condition: <%= f.select :condition, Book.conditions.keys.map { |w| [w.humanize, w] } %>
    <small>50% off for used books</small>
  </p>
  <%= f.submit 'Create' %>
<% end %>